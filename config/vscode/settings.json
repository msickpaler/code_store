{
  // 基本設定
  "workbench.iconTheme": "vscode-great-icons",
  "editor.tabSize": 2,
  "editor.rulers": [
    100
  ],
  "editor.wordWrapColumn": 100,
  "editor.wordWrap": "bounded",
  "editor.minimap.enabled": false,
  "editor.minimap.scale": 3,
  "editor.minimap.renderCharacters": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDelete": false,
  "git.confirmSync": false,
  "todo-tree.tree.showScanModeButton": false,
  "workbench.panel.defaultLocation": "right",
  "editor.fontFamily": "Menlo, monospace, ricty diminished",
  "explorer.confirmDragAndDrop": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.scrollBeyondLastLine": false,
  "editor.padding.bottom": 100, // 拡大率
  // "editor.fontSize": 15, //  文字サイズ: home
  "editor.fontSize": 13, //  文字サイズ: outdoor
  "editor.lineHeight": 20, // 行間
  "editor.quickSuggestionsDelay": 100, // 予測変換が出る時間[ms]
  "editor.formatOnSave": true,
  "editor.scrollbar.verticalScrollbarSize": 30, // エディタースクロールバーの横幅 //グレーアウトしているが効果あるので消すな
  // "editor.snippetSuggestions": "top", //snippetは予測変換の上に出る タグとか使いにくくなった
  "editor.suggest.snippetsPreventQuickSuggestions": false, //スニペットは邪魔しない
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "smooth",
  // eslint, prettier
  "eslint.packageManager": "yarn",
  // こいつ悪さしやすいから気をつけろ
  "eslint.workingDirectories": [
    "/Users/kenya/dev/firechief-web/partial/center/", // workingディレクトリでeslintの設定ファイルを上書きすべきかも。
    "/Users/kenya/dev/firechief-web/shared/", // workingディレクトリでeslintの設定ファイルを上書きすべきかも。
    "/Users/kenya/dev/firechief/" // workingディレクトリでeslintの設定ファイルを上書きすべきかも。
    // "/Users/kenya/dev/typescript-node-base/"
    // "${workspaceFolder}"
  ],
  // 消す。.prettierrc毎回作成してそれ使う。このファイルにはデフォルトのファイルを書く。
  // "prettier.jsxSingleQuote": true,
  // "prettier.singleQuote": true,
  // "prettier.useTabs": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    // "esbenp.prettier-vscode"にすると直す部分がめっちゃ増える。こっちに変えたほうがいい気はする。
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    // "esbenp.prettier-vscode"にすると直す部分がめっちゃ増える。こっちに変えたほうがいい気はする。
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    // "esbenp.prettier-vscode"にすると直す部分がめっちゃ増える。こっちに変えたほうがいい気はする。
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": true
  },
  // spell check
  "cSpell.userWords": [
    "activerecord",
    "axios",
    "csrf",
    "downcase",
    "esport",
    "firestore",
    "ipadic",
    "mariadb",
    "mecab",
    "mercari",
    "mouseleave",
    "msickpaler",
    "natto",
    "neologd",
    "newbee",
    "numpy",
    "nuxt",
    "nuxtjs",
    "omniauth",
    "predeploy",
    "prepend",
    "railtie",
    "readonly",
    "rgba",
    "securerandom",
    "tanuki",
    "touchstart",
    "typeof",
    "unprocessable",
    "vuetify",
    "vuex"
  ],
  "cSpell.language": "en",
  "gitlens.views.repositories.files.layout": "tree",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Monokai",
  "diffEditor.ignoreTrimWhitespace": false,
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "customizeUI.stylesheet": {
    ".tabs-and-actions-container .editor-actions": "display: none !important; position: absolute; top: 35px; right: 0; z-index: 1; background-color: #2D2D2D;",
    ".tabs-and-actions-container:hover .editor-actions": "display: flex !important;",
    ".title.tabs.show-file-icons": "overflow: unset !important;"
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "react-native.packager.port": 19001,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.printWidth": 100,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "window.zoomLevel": -2,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  // コメントの色付け
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF6928",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "fixme",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
  // "editor.quickSuggestions": true
}