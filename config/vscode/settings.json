{
  // 基本設定
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.colorTheme": "Solarized Dark",
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "bounded",
  "editor.minimap.enabled": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDelete": false,
  "git.confirmSync": false,
  "todo-tree.tree.showScanModeButton": false,
  "workbench.panel.defaultLocation": "right",
  "editor.fontFamily": "Menlo, monospace, ricty diminished",
  "explorer.confirmDragAndDrop": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.scrollBeyondLastLine": false,
  "editor.padding.bottom": 100,
  "window.zoomLevel": -1, // 拡大率
  "editor.fontSize": 15, //  文字サイズ
  "editor.lineHeight": 20, // 行間
  "editor.quickSuggestionsDelay": 1, // 予測変換が出る時間[ms]
  // "editor.snippetSuggestions": "top", //snippetは予測変換の上に出る タグとか使いにくくなった
  "editor.suggest.snippetsPreventQuickSuggestions": false, //スニペットは邪魔しない

  // eslint, prettier
  "eslint.packageManager": "yarn",
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "[vue]": { // 小文字じゃないとだめ！！！
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
  },
  "[javascript]": {
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
  },
  "vetur.validation.template": false,
  "eslint.workingDirectories": [
    "./front" // userから消す
  ],

  // rubocop

  // このruby.lintをonにすると、警告メッセージが二重に表示される。
  // "ruby.lint": {
  //   "rubocop": true
  // },

  // "ruby.format": "rubocop",
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  // userから消す
  "ruby.rubocop.configFilePath": "/Users/kenya/auto_schedule/back/.rubocop.yml",

  // erb
  "files.associations": {
    "*.erb": "erb",
  },
  "emmet.includeLanguages": {
    "erb": "html"
  },

  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": true,
  },

  // spell check
  "cSpell.userWords": [
    "csrf",
    "ipadic",
    "mariadb",
    "mecab",
    "natto",
    "neologd",
    "nuxt",
    "unprocessable",
    "vuex"
  ],
  "cSpell.enableFiletypes": [
    "!c",
    "!cpp",
    "!csharp",
    "!jade",
    "!latex",
    "!less",
    "!php",
    "!plaintext",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "ruby",
    "sql",
    "vue"
  ],
  "cSpell.language": "en",
  "gitlens.views.repositories.files.layout": "tree",

}